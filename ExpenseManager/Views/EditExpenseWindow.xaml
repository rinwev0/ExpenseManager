<Window x:Class="ExpenseManager.Views.EditExpenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Expense" Height="200" Width="300">
    <Grid>
        <TextBox Name="DescriptionTextBox" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="200" Margin="10,10,0,0"/>
        <TextBox Name="AmountTextBox" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="200" Margin="10,40,0,0"/>
        <Button Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="10,70,0,0" Click="Save_Click"/>
    </Grid>
</Window>