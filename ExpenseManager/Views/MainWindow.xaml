<Window x:Class="ExpenseManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Expense Manager" Height="350" Width="525">
    <Grid>
        <Button Content="Add Expense" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Click="AddExpense_Click"/>
        <Button Content="Edit Expense" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="110,0,0,0" Click="EditExpense_Click"/>
        <Button Content="Delete Expense" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="220,0,0,0" Click="DeleteExpense_Click"/>
        <ListView Name="ExpenseListView" HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="500" Margin="10,50,0,0"
                  DisplayMemberPath="Description"/>
        <TextBlock Name="TotalBalanceTextBlock" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" FontSize="16"/>
    </Grid>
</Window>